<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        	http://www.springframework.org/schema/context
        	http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <bean id="solrServer" class="org.apache.solr.client.solrj.impl.CommonsHttpSolrServer">
    <constructor-arg type="java.lang.String" value="http://vgas0488.vgregion.se:8280/solr/core0" />
  </bean>
  <bean id="iFeedSolrQuery" class="se.vgregion.ifeed.service.solr.IFeedSolrQuery">
    <property name="solrServer" ref="solrServer" />
  </bean>
  <bean id="iFeedService" class="se.vgregion.ifeed.service.IFeedServiceImpl">
    <constructor-arg ref="iFeedRepo" />
  </bean>

  <bean id="iFeedRepo" class="se.vgregion.dao.domain.patterns.repository.db.jpa.DefaultJpaRepository">
    <constructor-arg type="java.lang.Class" value="se.vgregion.ifeed.types.IFeed" />
  </bean>

  <bean id="metadataRepo" class="se.vgregion.dao.domain.patterns.repository.db.jpa.DefaultJpaRepository">
    <constructor-arg type="java.lang.Class" value="se.vgregion.ifeed.types.Metadata" />
  </bean>

  <bean id="apelonService" class="se.vgregion.metaservice.vocabularyservice.intsvc.VocabularyServiceIntServiceImplService" />

  <bean class="se.vgregion.ifeed.metadata.service.MetadataServiceImpl">
    <constructor-arg>
      <bean factory-bean="apelonService" factory-method="getVocabularyServiceIntServiceImplPort" />
    </constructor-arg>
    <constructor-arg ref="metadataRepo" />
    <property name="metadataRoots">
      <set>
        <value>Dokumentstatus</value>
        <value>Dokumenttyp VGR</value>
        <value>Handlingstyp</value>
        <value>Verksamhetskod</value>
      </set>
    </property>
  </bean>
</beans>
        