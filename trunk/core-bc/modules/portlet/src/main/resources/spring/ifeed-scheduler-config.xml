<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:util="http://www.springframework.org/schema/util"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">

  <bean id="schedulingConfigurator" class="com.liferay.portal.kernel.scheduler.config.PluginSchedulingConfigurator">
    <property name="schedulerEntries" ref="schedulerEntries" />
  </bean>

  <util:map id="schedulerEntries">
    <entry key="VgrScheduledJobs" value-ref="schedulerEntryList" />
  </util:map>

  <util:list id="schedulerEntryList">
    <bean id="iFeedPublishJob" class="com.liferay.portal.kernel.scheduler.SchedulerEntryImpl">
      <property name="triggerType" value="CRON" />
      <property name="eventListener" ref="iFeedPublishEvent" />
      <property name="eventListenerClass" value="se.vgregion.ifeed.scheduler.IFeedPublishScheduler" />
      <property name="triggerValue" value="* * * * * ?" />
    </bean>
  </util:list>

  <bean id="iFeedPublishEvent" class="se.vgregion.ifeed.scheduler.IFeedPublishScheduler" />

</beans>
