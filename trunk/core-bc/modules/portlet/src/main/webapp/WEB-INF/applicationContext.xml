<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
  <import resource="classpath*:spring/ifeed-*.xml" />

  <context:component-scan base-package="se.vgregion.ifeed.controller" />
  
  <bean id="iFeedValidator" class="se.vgregion.ifeed.controller.IFeedValidator" />
  
  <bean class="org.springframework.web.portlet.mvc.annotation.DefaultAnnotationHandlerMapping">
    <property name="interceptors" ref="openEntityInView" />
  </bean>

</beans>
